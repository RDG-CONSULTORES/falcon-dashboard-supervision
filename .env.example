# Falcon Miniapp Bot - Environment Variables Example
# Copy this file to .env and fill in your actual values

# ======================
# Core Application
# ======================
FLASK_ENV=production
DEBUG=false
PORT=5000

# ======================
# Security Configuration
# ======================
# Generate a strong 256-bit secret key for JWT tokens
# You can use: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-jwt-key-here-256-bits-minimum

# Optional: Additional secret key for Flask sessions
SECRET_KEY=your-flask-secret-key-here

# ======================
# Telegram Bot
# ======================
# Get this from @BotFather on Telegram
BOT_TOKEN=your-telegram-bot-token-here

# Public URL where your web app is hosted (for Mini Web App)
WEBAPP_URL=https://your-app.vercel.app

# ======================
# Database Configuration
# ======================
# PostgreSQL connection string (Neon, Supabase, or other PostgreSQL provider)
DATABASE_URL=postgresql://username:password@host:port/database

# ======================
# Cache Configuration (Optional but Recommended)
# ======================
# Redis connection string for caching and rate limiting
REDIS_URL=redis://localhost:6379/0

# Alternative Redis configuration
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=your-redis-password

# ======================
# Background Tasks (Optional - for production)
# ======================
# Celery broker and backend (usually Redis)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ======================
# Monitoring & Logging (Optional)
# ======================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# External monitoring service URLs (if using)
# SENTRY_DSN=https://your-sentry-dsn-here
# DATADOG_API_KEY=your-datadog-api-key

# ======================
# Performance Configuration
# ======================
# Database connection pool settings
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=25

# Cache TTL settings (in seconds)
CACHE_DEFAULT_TTL=300
CACHE_LONG_TTL=3600
CACHE_SHORT_TTL=60

# ======================
# Security Settings
# ======================
# Rate limiting settings
RATE_LIMIT_DEFAULT=100 per hour
RATE_LIMIT_STRICT=10 per minute

# CORS allowed origins (comma-separated)
CORS_ORIGINS=https://telegram.org,https://your-domain.com

# ======================
# Feature Flags (Optional)
# ======================
# Enable/disable features
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_SECURITY_HEADERS=true
ENABLE_AUDIT_LOGGING=true

# ======================
# Development Settings (Development only)
# ======================
# Only set these in development environment
# FLASK_DEBUG=true
# FLASK_ENV=development

# ======================
# Vercel Deployment (if using Vercel)
# ======================
# These are usually set automatically by Vercel
# VERCEL=1
# VERCEL_URL=your-app.vercel.app